<odoo>
    <record id="view_partner_form_inherit_3cx" model="ir.ui.view">
        <field name="name">res.partner.form.inherit.3cx</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Call Logs">
                    <field name="call_log_ids">
                        <tree>
                            <field name="date"/>
                            <field name="call_type"/>
                            <field name="agent_name"/>
                            <field name="agent_phone"/>
                            <field name="call_details"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
