<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_partner_form_readonly" model="ir.ui.view">
        <field name="name">res.partner.form.readonly</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="contacts.view_partner_form"/>
        <field name="arch" type="xml">
            <!-- Ajouter le champ Imported -->
            <xpath expr="//sheet" position="inside">
                <group>
                    <field name="imported" readonly="1"/>
                </group>
            </xpath>

            <!-- Rendre les champs en lecture seule si imported est True -->
            <xpath expr="//field[@name='name']" position="attributes">
                <attribute name="attrs">{'readonly': [('imported', '=', True)]}</attribute>
            </xpath>
            <xpath expr="//field[@name='phone']" position="attributes">
                <attribute name="attrs">{'readonly': [('imported', '=', True)]}</attribute>
            </xpath>
            <xpath expr="//field[@name='email']" position="attributes">
                <attribute name="attrs">{'readonly': [('imported', '=', True)]}</attribute>
            </xpath>
        </field>
    </record>
</odoo>
