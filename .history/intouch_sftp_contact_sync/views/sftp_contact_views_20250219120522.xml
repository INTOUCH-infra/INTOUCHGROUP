<odoo>
    <record id="view_sftp_contact_form" model="ir.ui.view">
        <field name="name">sftp.contact.form</field>
        <field name="model">sftp.contact.sync</field>
        <field name="arch" type="xml">
            <form string="Configuration SFTP">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="sftp_host"/>
                        <field name="sftp_port"/>
                        <field name="sftp_username"/>
                        <field name="sftp_password" password="True"/>
                        <field name="sftp_directory"/>
                        <field name="last_sync" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_sftp_contact_tree" model="ir.ui.view">
        <field name="name">sftp.contact.tree</field>
        <field name="model">sftp.contact.sync</field>
        <field name="arch" type="xml">
            <tree string="Configurations SFTP">
                <field name="name"/>
                <field name="sftp_host"/>
                <field name="sftp_directory"/>
                <field name="last_sync"/>
            </tree>
        </field>
    </record>
</odoo>
