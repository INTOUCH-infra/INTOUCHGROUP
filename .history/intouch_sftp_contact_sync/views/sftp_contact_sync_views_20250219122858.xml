<odoo>
    <data>
        <record id="view_sftp_contact_sync_form" model="ir.ui.view">
            <field name="name">sftp.contact.sync.form</field>
            <field name="model">sftp.contact.sync</field>
            <field name="arch" type="xml">
                <form string="Configuration SFTP">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="sftp_host"/>
                            <field name="sftp_port"/>
                            <field name="sftp_username"/>
                            <field name="sftp_password"/>
                            <field name="sftp_directory"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_sftp_contact_sync" model="ir.actions.act_window">
            <field name="name">Synchronisation des Contacts SFTP</field>
            <field name="res_model">sftp.contact.sync</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem id="menu_sftp_contact_sync"
                  name="Synchronisation des Contacts SFTP"
                  parent="base.menu_config"
                  action="action_sftp_contact_sync"/>
    </data>
</odoo>
