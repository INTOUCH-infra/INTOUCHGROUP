<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_partner_form" model="ir.ui.view">
        <field name="model">res.partner</field>
        <field name="priority">9</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="inside">
                <notebook>
                    <page string="Applet Call Logs">
                        <field name="call_log_ids" nolabel="1">
                            <tree editable="bottom">
                                <field name="subject"/>
                                <field name="date"/>
                                <field name="call_type"/>
                                <field name="entity"/>
                                <field name="agent_name"/>
                                <field name="agent_phone"/>
                                <field name="details"/>
                            </tree>
                        </field>
                    </page>
                </notebook>
            </xpath>
        </field>
    </record>

    <!-- Modèle pour stocker les logs d'appels -->
    <record id="model_call_logs" model="ir.model">
        <field name="name">Call Logs</field>
        <field name="model">res.partner.call.log</field>
        <field name="state">manual</field>
    </record>

    <!-- Ajout du modèle de données pour les logs d’appels -->
    <record id="view_call_log_tree" model="ir.ui.view">
        <field name="name">call.log.tree</field>
        <field name="model">res.partner.call.log</field>
        <field name="arch" type="xml">
            <tree>
                <field name="subject"/>
                <field name="date"/>
                <field name="call_type"/>
                <field name="entity"/>
                <field name="agent_name"/>
                <field name="agent_phone"/>
                <field name="details"/>
            </tree>
        </field>
    </record>
</odoo>
